<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_countdown"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cyrusv.onedayatatime.CountdownActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num_days"
        android:layout_weight="1"
        android:textSize="50sp"
        android:textAlignment="center" />

    <TextView
        android:text="@string/default_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/units"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center" />

    <TextView
        android:text="@string/and_counting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/and_counting"
        android:layout_weight="1"
        android:textAlignment="center" />

</LinearLayout>
